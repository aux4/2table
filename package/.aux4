{
  "scope": "aux4",
  "name": "2table",
  "version": "0.1.7",
  "description": "Convert a JSON array of objects to a table format.",
  "license": "Apache-2.0",
  "git": "https://github.com/aux4/2table",
  "tags": [
    "json",
    "table",
    "ascii",
    "markdown"
  ],
  "profiles": [
    {
      "name": "main",
      "commands": [
        {
          "name": "2table",
          "execute": [
            "stdin:node ${packageDir}/lib/aux4-2table.mjs values(format, table, lineNumbers, showInvalidLines)"
          ],
          "help": {
            "text": "Convert a JSON array of objects to a table format.",
            "variables": [
              {
                "name": "format",
                "text": "Table output format.",
                "default": "ascii",
                "options": [
                  "ascii",
                  "md"
                ]
              },
              {
                "name": "table",
                "text": "The table structure to output.",
                "default": "",
                "arg": true
              },
              {
                "name": "lineNumbers",
                "text": "Add a first column with line numbers (aligned to the right) starting from 1.",
                "default": "false"
              },
              {
                "name": "showInvalidLines",
                "text": "Show invalid lines as <invalid line> in red instead of skipping them.",
                "default": "false"
              }
            ]
          }
        }
      ]
    }
  ]
}
